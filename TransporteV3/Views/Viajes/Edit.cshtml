@model TransporteV3.Entidades.Viaje

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Editar Viaje</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Editar Viaje</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdViajes" />
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Viajes" class="form-control" placeholder="" required />
                <label asp-for="Viajes" class="control-label"></label>
                <span asp-validation-for="Viajes" class="text-danger"></span>
                <span asp-validation-for="Viajes" class="valid-feedback">Datos correctos!</span>
                <span asp-validation-for="Viajes" class="invalid-feedback">Complete los datos!</span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Origen" class="form-control" placeholder="" />
                <label asp-for="Origen" class="control-label"></label>
                <span asp-validation-for="Origen" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Destino" class="form-control" placeholder="" />
                <label asp-for="Destino" class="control-label"></label>
                <span asp-validation-for="Destino" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <select asp-for="IdChofer" class="form-control" asp-items="ViewBag.IdChofer" required><option selected disabled value="">Seleccione un chofer</option></select>
                <label asp-for="IdChofer" class="control-label"></label>
                <span asp-validation-for="IdChofer" class="valid-feedback">Datos correctos!</span>
                <span asp-validation-for="IdChofer" class="invalid-feedback">Seleccione un chofer</span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" required><option selected disabled value="">Seleccione un clinte</option></select>
                <label asp-for="IdCliente" class="control-label"></label>
                <span asp-validation-for="IdCliente" class="valid-feedback">Datos correctos!</span>
                <span asp-validation-for="IdCliente" class="invalid-feedback">Seleccione un cliente</span>
            </div>
            <div class="col-12 col-sm-2 form-floating mb-2">

                <input asp-for="Tarifa" class="form-control" placeholder="" />
                <label asp-for="Tarifa" class="control-label"></label>
                <span asp-validation-for="Tarifa" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-2 form-floating mb-2">

                <select asp-for="IdFormaPago" class="form-control" asp-items="ViewBag.IdFormaPago" required><option selected disabled value="">Seleccione forma pago</option></select>
                <label asp-for="IdFormaPago" class="control-label"></label>
                <span asp-validation-for="IdCliente" class="valid-feedback">Datos correctos!</span>
                <span asp-validation-for="IdCliente" class="invalid-feedback">Seleccione una forma de pago</span>
            </div>
            <div class="col-12 col-sm-2 form-floating mb-2">

                <input asp-for="Escobrado" class="form-control" placeholder="" />
                <label asp-for="Escobrado" class="control-label"></label>
                <span asp-validation-for="Escobrado" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Remito" class="form-control" placeholder="" />
                <label asp-for="Remito" class="control-label"></label>
                <span asp-validation-for="Remito" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-12 form-floating mb-2">

                <textarea asp-for="Detalle" class="form-control" style="height: 75px" placeholder=""></textarea>
                <label asp-for="Detalle" class="control-label"></label>
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Ncontenedor" class="form-control" placeholder="" />
                <label asp-for="Ncontenedor" class="control-label"></label>
                <span asp-validation-for="Ncontenedor" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="EsFacturado" class="form-control" placeholder="" />
                <label asp-for="EsFacturado" class="control-label"></label>
                <span asp-validation-for="EsFacturado" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Entidad" class="form-control" placeholder="" />
                <label asp-for="Entidad" class="control-label"></label>
                <span asp-validation-for="Entidad" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-3 form-floating mb-2">

                <input asp-for="Nfactura" class="form-control" placeholder="" />
                <label asp-for="Nfactura" class="control-label"></label>
                <span asp-validation-for="Nfactura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>
            </div>
        </form>
    </div>
</div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
