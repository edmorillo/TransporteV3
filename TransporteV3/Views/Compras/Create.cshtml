@model TransporteV3.Entidades.Compra

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Crear Compra</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Crear Compra</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate id="crearForm" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-sm-6">
                            <div class="form-floating mb-2">

                                <input asp-for="Cantidad" class="form-control" placeholder="Cantidad" />
                                <label asp-for="Cantidad" class="control-label"></label>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-2">

                                <input asp-for="Precio" class="form-control" placeholder="Precio" />
                                <label asp-for="Precio" class="control-label"></label>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">

                            <div class="form-floating mb-2">

                                <select asp-for="IdFormaPago" class="form-select" asp-items="ViewBag.IdFormaPago" required><option selected disabled value="">Seleccione una Forma de pago</option></select>
                                <label asp-for="IdFormaPago" class="floatingSelect"></label>
                                <span asp-validation-for="IdFormaPago" class="valid-feedback">Datos correctos!</span>
                                <span asp-validation-for="IdFormaPago" class="invalid-feedback">Seleccione una Forma de pago</span>
                            </div>

                            <div class="form-floating mb-2">

                                <input asp-for="FechaCompra" class="form-control" placeholder="Fecha de Compra" />
                                <label asp-for="FechaCompra" class="control-label"></label>
                                <span asp-validation-for="FechaCompra" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-floating mb-2">

                            <textarea asp-for="Detalle" class="form-control" style="height: 75px" placeholder="Detalle"></textarea>
                            <label asp-for="Detalle" class="control-label"></label>
                            <span asp-validation-for="Detalle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                            <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
