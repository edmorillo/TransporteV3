@using TransporteV3.Servicios;
@model IEnumerable<TransporteV3.Entidades.Compra>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Administrar Compras</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Administrar Compras</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-primary rounded-pill px-3">Crear Compra</a>
            </p>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Detalle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaCompra)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdFormaPagoNavigation)
                        </th>
                        <th>
                            Acción
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Detalle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaCompra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdFormaPagoNavigation.FormaPago)
                            </td>
                            <td>
                                <div>
                                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdCompra"><i class="bi bi-journal-text"></i></a>
                                    @if (User.IsInRole(Constantes.RolAdmin))
                                    {
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdCompra"><i class="bi bi-trash3"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
