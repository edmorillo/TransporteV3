@model TransporteV3.Entidades.TipoUnidade

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Editar tipo de unidades</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active"> Editar tipo de unidades</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdTipoUnidad" />
                        <div class="col-12 col-sm-8 form-floating mb-2">

                            <input asp-for="Detalle" class="form-control" placeholder="Tipo Unidad" required />
                            <label asp-for="Detalle" class="control-label"></label>
                            <span asp-validation-for="Detalle" class="text-danger"></span>
                            <span asp-validation-for="Detalle" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Detalle" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdTipoMarcaUnidades" class="form-control" asp-items="ViewBag.IdTipoMarcaUnidades" required><option selected disabled value="">Seleccione un tipo de marca de unidad</option></select>
                            <label asp-for="IdTipoMarcaUnidades" class="control-label"></label>
                            <span asp-validation-for="IdTipoMarcaUnidades" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdTipoMarcaUnidades" class="invalid-feedback">Seleccione una opción</span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                            <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
