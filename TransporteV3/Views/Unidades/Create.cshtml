@model TransporteV3.Entidades.Unidade

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Crear unidad</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Crear unidad</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12 col-sm-4 form-floating mb-2">
                            <input asp-for="Matricula" class="form-control" placeholder="" required/>
                            <label asp-for="Matricula" class="control-label"></label>
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                            <span asp-validation-for="Matricula" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Matricula" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="Chasis" class="form-control" placeholder="" required/>
                            <label asp-for="Chasis" class="control-label"></label>
                            <span asp-validation-for="Chasis" class="text-danger"></span>
                            <span asp-validation-for="Chasis" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Chasis" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="Modelo" class="form-control" placeholder="" />
                            <label asp-for="Modelo" class="control-label"></label>
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                            <span asp-validation-for="Modelo" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Modelo" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="Año" class="form-control" placeholder="" />
                            <label asp-for="Año" class="control-label"></label>
                            <span asp-validation-for="Año" class="text-danger"></span>
                            <span asp-validation-for="Año" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Año" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="CapacidadCarga" class="form-control" placeholder="" required/>
                            <label asp-for="CapacidadCarga" class="control-label"></label>
                            <span asp-validation-for="CapacidadCarga" class="text-danger"></span>
                            <span asp-validation-for="CapacidadCarga" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="CapacidadCarga" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdTipoUnidad" class="form-control" asp-items="ViewBag.IdTipoUnidad" required><option selected disabled value="">Seleccione un tipo de Unidad</option></select>
                            <label asp-for="IdTipoUnidad" class="control-label"></label>
                            <span asp-validation-for="IdTipoUnidad" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdTipoUnidad" class="invalid-feedback">Seleccione un tipo de Unidad</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdNeumatico" class="form-control" asp-items="ViewBag.IdNeumatico" required><option selected disabled value="">Seleccione un Neumatico</option></select>
                            <label asp-for="IdNeumatico" class="control-label"></label>
                            <span asp-validation-for="IdNeumatico" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdNeumatico" class="invalid-feedback">Seleccione un Neumatico</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="Kilometros" class="form-control" placeholder="" />
                            <label asp-for="Kilometros" class="control-label"></label>
                            <span asp-validation-for="Kilometros" class="text-danger"></span>
                            <span asp-validation-for="Kilometros" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Kilometros" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="FechaMantenimiento" class="form-control" placeholder="" />
                            <label asp-for="FechaMantenimiento" class="control-label"></label>
                            <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
                            <span asp-validation-for="FechaMantenimiento" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="FechaMantenimiento" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="FechaCompra" class="form-control" placeholder="" />
                            <label asp-for="FechaCompra" class="control-label"></label>
                            <span asp-validation-for="FechaCompra" class="text-danger"></span>
                            <span asp-validation-for="FechaCompra" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="FechaCompra" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="VencimientoUnidad" class="form-control" placeholder="" />
                            <label asp-for="VencimientoUnidad" class="control-label"></label>
                            <span asp-validation-for="VencimientoUnidad" class="text-danger"></span>
                            <span asp-validation-for="VencimientoUnidad" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="VencimientoUnidad" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                            <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
