@model TransporteV3.Entidades.Unidade

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Eliminar Chofer</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Eliminar Chofer</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <h3>¿Estás seguro que quieres eliminar esto?</h3>
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Matricula)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Matricula)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Chasis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Chasis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Modelo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Modelo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Año)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Año)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CapacidadCarga)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CapacidadCarga)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdTipoUnidadNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdTipoUnidadNavigation.Detalle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdNeumaticoNavigation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdNeumaticoNavigation.Marca)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Kilometros)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Kilometros)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaMantenimiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaMantenimiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaCompra)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaCompra)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VencimientoUnidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VencimientoUnidad)
                </dd>


            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUnidad" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-light">Cancelar</a>
            </form>
        </div>
    </div>
</div>