@model RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-1 d-none d-lg-block "></div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">¡Crea una cuenta!</h1>
                                </div>
                                <form asp-action="Registro" class="user">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-2">
                                        <input asp-for="Email" class="form-control form-control-user"
                                               placeholder="Dirección de correo electrónico">
                                        <label asp-for="Email" class="control-label">Introducir la dirección de correo electrónico...</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-2">
                                        <input asp-for="Password" class="form-control form-control-user"
                                               id="contrasena" placeholder="Contraseña">
                                        <label asp-for="Password" class="control-label">Introducir contraseña...</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="mostrarContrasena">Mostrar Contraseña:</label>
                                        <input type="checkbox" id="mostrarContrasena" onchange="mostrarOcultarContrasena()">
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block">Registrar Cuenta</button>
                                    @*<a class="btn btn-primary btn-user btn-block">
                                    Registrar Cuenta
                                    </a>*@
                                    @*<hr>
                                    <a asp-action="LoginExterno" asp-route-proveedor="Microsoft" class="btn btn-google btn-user btn-block">
                                    <i class="bi bi-microsoft"></i> Iniciar sesión con Microsoft
                                    </a>*@

                                </form>
                                @*<p id="contrasenaMostrada" style="display: none;"></p>*@
                                <hr>

                                <div class="text-center">
                                    <a class="small" asp-action="login">¿Ya tienes una cuenta? ¡Acceso!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
