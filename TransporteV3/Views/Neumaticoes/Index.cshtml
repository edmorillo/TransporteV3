@using TransporteV3.Servicios;
@model IEnumerable<TransporteV3.Entidades.Neumatico>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Administrar Neumaticos</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Administrar Neumaticos</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-primary rounded-pill px-3">Crear Chofer</a>
            </p>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Marca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rodado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Modelo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Kilometraje)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdTipoMarcaNeumaticosNavigation)
                        </th>
                        <th>
                            Acción
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rodado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kilometraje)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoMarcaNeumaticosNavigation.TipoMarcaNeumatico)
                            </td>
                            <td>
                                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdNeumatico"><i class="bi bi-journal-text"></i></a>
                                @if (User.IsInRole(Constantes.RolAdmin))
                                {
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdNeumatico"><i class="bi bi-trash3"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
