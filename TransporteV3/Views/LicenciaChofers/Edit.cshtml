@model TransporteV3.Entidades.LicenciaChofer

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Editar licencia del chofer</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Editar licencia del chofer</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdLicenciaChofer" />
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdChofer" class="form-control" asp-items="ViewBag.IdChofer" required><option selected disabled value="">Seleccione un chefer</option></select>
                            <label asp-for="IdChofer" class="control-label"></label>
                            <span asp-validation-for="IdChofer" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdChofer" class="invalid-feedback">Seleccione un chefer</span>
                        </div>
                        <div class="col-12 col-sm-5 form-floating mb-2">

                            <select asp-for="IdTiposDocumentos" class="form-control" asp-items="ViewBag.IdTiposDocumentos" required><option selected disabled value="">Seleccione el tipo de documento</option></select>
                            <label asp-for="IdTiposDocumentos" class="control-label"></label>
                            <span asp-validation-for="IdTiposDocumentos" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdTiposDocumentos" class="invalid-feedback">Seleccione el tipo de documento</span>
                        </div>
                        <div class="col-12 col-sm-3 form-floating mb-2">

                            <input asp-for="FechaVencimiento" class="form-control" required />
                            <label asp-for="FechaVencimiento" class="control-label"></label>
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                            <span asp-validation-for="FechaVencimiento" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="FechaVencimiento" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                            <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
