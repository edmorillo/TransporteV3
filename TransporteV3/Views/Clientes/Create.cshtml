@model TransporteV3.Entidades.Cliente

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid px-4">

    <div class="card-header">
        <h2 class="mt-4">Crear Cliente</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a class="nav-link btn btn-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Crear Cliente</li>
        </ol>
    </div>
    <div class="card mb-4">


        <div class="card-body">
            <div class="row">
                <div class="col">
                    <form class="row g-3 needs-validation" novalidate asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-12 col-sm-6 form-floating mb-2">
                            <input asp-for="Nombre" class="form-control " placeholder="Ingrese Su nombre" required />
                            <label asp-for="Nombre" class="control-label">Ingrese su nombre</label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <span asp-validation-for="Nombre" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Nombre" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-6 form-floating mb-2">
                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese su Apellido" />
                            <label asp-for="Apellido" class="control-label"></label>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdCondicionIva" class="form-control" asp-items="ViewBag.IdCondicionIva" required><option selected disabled value="">Seleccione una Condición...</option></select>
                            <label asp-for="IdCondicionIva" class="control-label"></label>
                            <span asp-validation-for="IdCondicionIva" class="text-danger"></span>
                            <span asp-validation-for="IdCondicionIva" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdCondicionIva" class="invalid-feedback">Seleccione una Condición...</span>
                        </div>
                        <div class="col-12 col-sm-5 form-floating mb-2">

                            <input asp-for="RazonSocial" class="form-control" placeholder="" required />
                            <label asp-for="RazonSocial" class="control-label"></label>
                            <span asp-validation-for="RazonSocial" class="text-danger"></span>
                            <span asp-validation-for="RazonSocial" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="RazonSocial" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-3 form-floating mb-2">

                            <input asp-for="Cuit" class="form-control" placeholder="" required />
                            <label asp-for="Cuit" class="control-label"></label>
                            <span asp-validation-for="Cuit" class="text-danger"></span>
                            <span asp-validation-for="Cuit" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Cuit" class="invalid-feedback">Complete los datos!</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.IdProvincia" required><option selected disabled value="">Seleccione una Provincia...</option></select>
                            <label asp-for="IdProvincia" class="control-label"></label>
                            <span asp-validation-for="IdProvincia" class="text-danger"></span>
                            <span asp-validation-for="IdProvincia" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="IdProvincia" class="invalid-feedback">Seleccione una Provincia...</span>
                        </div>


                        <div class="col-12 col-sm-5 form-floating mb-2">

                            <input asp-for="Direccion" class="form-control" placeholder="" />
                            <label asp-for="Direccion" class="control-label"></label>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-sm-3 form-floating mb-2">

                            <input asp-for="CodigoPostal" class="form-control" placeholder="" />
                            <label asp-for="CodigoPostal" class="control-label"></label>
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-sm-5 form-floating mb-2">
                            <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" required />
                            <label asp-for="Email" class="control-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <span asp-validation-for="Email" class="valid-feedback">Datos correctos!</span>
                            <span asp-validation-for="Email" class="invalid-feedback">El campo debe ser un correo electrónico válido</span>
                        </div>
                        <div class="col-12 col-sm-4 form-floating mb-2">

                            <input asp-for="Telefono" class="form-control" placeholder="" />
                            <label asp-for="Telefono" class="control-label"></label>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-sm-3 form-floating mb-2">

                            <input asp-for="IngresosBrutos" class="form-control" placeholder="" />
                            <label asp-for="IngresosBrutos" class="control-label"></label>
                            <span asp-validation-for="IngresosBrutos" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success rounded-pill px-3" />
                            <a asp-action="Index" class="btn btn-info rounded-pill px-3">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
